#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    int n,i;
	    cin>>n;
	    int H[n];
	    for(i=0;i<n;i++)
	    {
	        cin>>H[i];
	    }
	    int total_water=0;
	    int waterlevel=0;
	    int water_at_i=0;
	    int lmax=0;
	    int rmax=0;
	    for(i=0;i<n;i++)
	    {
	        for(int j=0;j<=i;j++)
	        {
	            lmax=max(lmax,H[j]);
	        }
	        for(int k=i;k<n;k++)
	        {
	            rmax=max(rmax,H[k]);
	        }
	        waterlevel=min(lmax,rmax);
	        water_at_i=waterlevel-H[i];
	        total_water+=water_at_i;
	    }
	    cout<<total_water<<endl;
	}
	return 0;
}
